/*
package watertankadt;

public class WaterTank {
    private int capacity;
    private int currentLevel;

    // Constructor to initialize the tank
    public WaterTank(int capacity) {
        this.capacity = capacity;
        this.currentLevel = 0;
    }

    // Method to add water to the tank
    public void addWater(int amount) {
        this.currentLevel = Math.min(this.capacity, this.currentLevel + amount);
    }

    // Method to remove water from the tank
    public void removeWater(int amount) {
        this.currentLevel = Math.max(0, this.currentLevel - amount);
    }

    // Method to check the current water level
    public int checkLevel() {
        return this.currentLevel;
    }
}
 */
